AnotherWorld/
├── public/      # Веб-корень (видимая пользователям часть)
│   ├── index.php                  # Входная точка проекта, инициализирует приложение
│   └── css/                       # Каталог стилей (CSS)
│   └── js/                        # Каталог JavaScript файлов
│   └── images/                    # Каталог изображений
├── src/                           # Исходники проекта
│   ├── models/                    # Модели сущностей (игроки, предметы и т.д.)
│   │   ├── Player.php             # Модель игрока
│   │   └── Item.php               # Модель предмета
│   ├── services/                 # Бизнес-логика и сервисные классы
│   │   ├── GameService.php        # Серверные сервисы игры
│   │   └── AuthService.php        # Авторизация и аутентификация
│   ├── controllers/              # Контроллеры для обработки HTTP-запросов
│   │   ├── IndexController.php    # Контроллер главной страницы
│   │   └── LoginController.php    # Контроллер авторизации
│   ├── libs/                      # Дополнительные библиотеки (если необходимы)
│   └── utils.php                  # Вспомогательные функции (рендеринг шаблонов)
├── templates/                     # Каталог шаблонов (представления)
│   ├── layout.html.php            # Общее оформление страницы (шапка, контент, футер)
│   ├── pages/                     # Содержимое конкретных страниц
│   │   ├── home.html.php          # Представление главной страницы
│   │   └── login.html.php         # Представление страницы авторизации
│   └── partials/                  # Частичные элементы (шапка, футер)
│       ├── header.html.php         # Верхний блок (шапка)
│       └── footer.html.php         # Нижний блок (футер)
├── config/                        # Каталог конфигурационных файлов
│   └── database.php               # Настройки подключения к базе данных
├── logs/                          # Папка для логов (для отслеживания ошибок)
└── bootstrap.php                  # Инициализация проекта (загрузка классов, сервисов)